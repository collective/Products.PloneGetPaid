<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      i18n:domain="Products.PloneGetPaid" tal:omit-tag=""
      tal:condition="python:view == view.wizard.currentStep">  
  <tal:verified condition="view/wizard/isVerifiedCheckoutContinuation">
    <div tal:define="raw provider:getpaid.wizard.before_methods"
         tal:condition="raw" tal:replace="structure raw" />
  </tal:verified>
  <fieldset id="payment-methods" class="group"
            tal:condition="view/wizard/areStepfulProcessorsAvailable"
            tal:define="buttons provider:getpaid.wizard.payment_buttons">
    <legend tal:condition="buttons" i18n:translate="">Other payment methods</legend>
    <legend tal:condition="not:buttons" i18n:translate="">Payment methods</legend>
    <div tal:replace="structure view/index" />
  </fieldset>
  <tal:verified condition="view/wizard/isVerifiedCheckoutContinuation">
    <div tal:replace="structure provider:getpaid.wizard.previous_steps" />
  </tal:verified>
  <tal:verified condition="view/wizard/isVerifiedCheckoutContinuation">
    <div tal:define="order_id view/order_id"
         tal:replace="structure provider:getpaid.cart" />
  </tal:verified>
  <tal:verified condition="view/wizard/isVerifiedCheckoutContinuation">
    <div tal:define="raw provider:getpaid.wizard.after_methods"
         tal:condition="raw" tal:replace="structure raw" />
  </tal:verified>
</html>
