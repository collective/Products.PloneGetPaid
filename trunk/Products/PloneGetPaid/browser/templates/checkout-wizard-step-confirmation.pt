<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      i18n:domain="Products.PloneGetPaid" tal:omit-tag="">

  <tal:verified condition="view/wizard/isVerifiedCheckoutContinuation">
    <div tal:define="raw provider:getpaid.wizard.before_confirmation"
         tal:condition="raw" tal:replace="structure raw" />
  </tal:verified>
    
  <div tal:replace="structure view/index" />

  <tal:verified condition="view/wizard/isVerifiedCheckoutContinuation">
    <div tal:condition="python:view == view.wizard.currentStep"
         tal:replace="structure provider:getpaid.wizard.previous_steps" />
    <div tal:condition="python:view == view.wizard.currentStep"
         tal:define="order_id view/order_id"
         tal:replace="structure provider:getpaid.cart" />
  </tal:verified>
  
  <fieldset id="order-status" class="group">
    <legend i18n:translate="">Order status</legend>
    <dl>
      <dt i18n:translate="">Your order date is</dt>
      <dd i18n:translate="" tal:content="view/order_date">10.10.2010</dd>
      <dt i18n:translate="">Your order number is</dt>
      <dd i18n:translate="" tal:content="view/order_id">123456789</dd>
      <dt i18n:translate="">Your payment is</dt>
      <dd i18n:translate="" tal:content="view/finance_state">CHARGED</dd>
      <dt i18n:translate="">Your order is</dt>
      <dd i18n:translate="" tal:content="view/fulfillment_state">DELIVERED</dd>
    </dl>
  </fieldset>
  
  <tal:verified condition="view/wizard/isVerifiedCheckoutContinuation">
    <div tal:define="raw provider:getpaid.wizard.after_confirmation"
         tal:condition="raw" tal:replace="structure raw" />
  </tal:verified>
  
</html>
