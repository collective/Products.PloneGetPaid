<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      i18n:domain="Products.PloneGetPaid" tal:omit-tag="">
  <dl class="portlet shopping-cart" tal:condition="not:view/data/omit_border">
    <dt class="portletHeader" tal:condition="not:view/data/omit_header">
      <span class="portletTopLeft"></span>
      <span class="portletTopMiddle" i18n:translate="">Your shopping cart</span>
      <span class="portletTopRight"></span>
    </dt>
    <dd class="portletItem odd">
      <metal:body define-macro="body">
        <p class="getpaid-cart-items" i18n:translate="text_contains_item"
           tal:define="size view/size" tal:condition="python:size == 1">
          Contains <span tal:content="size" i18n:name="size"> 1 </span> item
        </p>
        <p class="getpaid-cart-items" i18n:translate="text_contains_items"
           tal:define="size view/size" tal:condition="python:size > 1">
          Contains <span tal:content="size" i18n:name="size"> 5 </span> items
        </p>
        <p class="getpaid-cart-total">
          <span i18n:translate="">Total</span> <span tal:content="view/totals/total">$ 10.00</span>
        </p>
        <p tal:condition="view/data/omit_border">
          <a href="#" class="getpaid-cart-link"
             tal:attributes="href string:${context/portal_url}/@@shopping-cart"
             i18n:translate="label_manage_cart">Manage Cart</a>
        </p>
        <p tal:condition="view/data/omit_border">
          <a href="#" class="getpaid-checkout-link"
             tal:attributes="href string:${context/portal_url}/@@checkout"
             i18n:translate="">Checkout</a>
        </p>
      </metal:body>
    </dd>
    <dd class="portletFooter">
      <span class="portletBottomLeft"></span>
      <a href="#" class="getpaid-cart-link"
         tal:attributes="href string:${context/portal_url}/@@shopping-cart"
         i18n:translate="label_manage_cart">Manage Cart</a>
      <span class="portletBottomRight"></span>
    </dd>
    <dd class="portletFooter">
      <span class="portletBottomLeft"></span>
      <a href="#" class="getpaid-checkout-link"
         tal:attributes="href string:${context/portal_url}/@@checkout"
         i18n:translate="">Checkout</a>
      <span class="portletBottomRight"></span>
    </dd>
  </dl>
  <dl tal:condition="view/data/omit_border">
    <metal use-macro="here/macros/body" />
  </dl>
</html>
